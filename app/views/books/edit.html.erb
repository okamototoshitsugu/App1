<h1>Ebiting Book</h1>
<% if @book.errors.any? %>
<div id="error_explanation">
	<h3><%= pluralize(@book.errors.count, "error") %> 空欄があります！:</h3>
	<ul>
		<% @book.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>


<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path(@book.id) %>