<h1>Books</h1>

<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "show", book_path(book.id) %>
<%= link_to "edit", edit_book_path(book.id) %>
<%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
</td>
</tr>
<% end %>
</tbody>
</table>

<h3>New book</h3>

<% if @book.errors.any? %>
<div id="error_explanation">
	<h3><%= pluralize(@book.errors.count, "error") %> 空欄があります！:</h3>
	<ul>
		<% @book.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>

<%= form_for(@book, url:"/books") do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>
<% end %>